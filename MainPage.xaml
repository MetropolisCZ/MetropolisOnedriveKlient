<Page
    x:Class="MetropolisOnedriveKlient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MetropolisOnedriveKlient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Frame x:Name="NavigacniRamec" Navigated="NavigacniRamec_Navigated"></Frame>

    <Page.BottomAppBar>
        <CommandBar>

            <AppBarButton x:Name="tlacitkoSoubory" HorizontalAlignment="Left" Icon="Folder" Label="Soubory" VerticalAlignment="Top" Click="tlacitkoSoubory_Click"/>
            <AppBarButton x:Name="tlacitkoUcet" HorizontalAlignment="Left" Icon="Contact" Label="Účet" VerticalAlignment="Top" Click="tlacitkoUcet_Click"/>

            <CommandBar.Content>
                <TextBlock x:Name="NadpisStrankyTextBlock" Margin="12,8" x:FieldModifier="public" />
            </CommandBar.Content>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
