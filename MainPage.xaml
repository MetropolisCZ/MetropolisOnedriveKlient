<Page
    x:Class="MetropolisOnedriveKlient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MetropolisOnedriveKlient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Frame x:Name="NavigacniRamec" Navigated="NavigacniRamec_Navigated"></Frame>

    <Page.TopAppBar>
        <CommandBar x:FieldModifier="public" x:Name="CommandBarMainPage">

            <AppBarButton x:Name="tlacitkoPrubeh" x:Uid="AppBarTlacitkoPrubeh" HorizontalAlignment="Left" Icon="Switch" VerticalAlignment="Top" Click="TlacitkoPrubeh_Click" />

            <AppBarButton x:Name="tlacitkoSoubory" x:Uid="AppBarTlacitkoSoubory" HorizontalAlignment="Left" Icon="Folder" VerticalAlignment="Top" Click="TlacitkoSoubory_Click" />

            <AppBarButton x:Name="AppBarTlacitkoHledani" x:Uid="AppBarTlacitkoHledani" HorizontalAlignment="Left" Icon="Find" VerticalAlignment="Top" Click="AppBarTlacitkoHledani_Click" />


            <AppBarButton x:Name="tlacitkoUcet" x:Uid="AppBarTlacitkoNastaveni" HorizontalAlignment="Left" Icon="Setting" VerticalAlignment="Top" Click="TlacitkoUcet_Click"/>

            <CommandBar.Content>
                <TextBlock x:Name="NadpisStrankyTextBlock" Margin="12,8" x:FieldModifier="public" />
            </CommandBar.Content>
        </CommandBar>
    </Page.TopAppBar>
</Page>
